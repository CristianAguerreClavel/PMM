<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal|center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCIONES SOBRE BD"/>

    <Button
        android:id="@+id/btnCrearBDPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Crear BD Personal"/>
    <Button
        android:id="@+id/btnInsertarPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Insertar Persona"/>
    <Button
        android:id="@+id/btnBorrarPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Borrar Persona"/>
    <Button
        android:id="@+id/btnBuscarPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Buscar Persona"/>
    <Button
        android:id="@+id/btnVerPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Ver Persona"/>
    <Button
        android:id="@+id/btnInsertarPorDefecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Insertar datos por defecto"/>

</LinearLayout>